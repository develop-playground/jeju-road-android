<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="information"
            type="github.hongbeomi.jeju_road.domain.model.Information" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <TextView
            android:id="@+id/textView_item_restaurant_list_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{information.name}"
            android:textColor="@color/black"
            android:textSize="16sp"
            tools:text="한밭대 떡볶이"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/textView_item_restaurant_list_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{String.valueOf(information.id)}"
            android:textColor="@color/black"
            android:textSize="14sp"
            tools:text="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView_item_restaurant_list_name" />


        <TextView
            android:id="@+id/textView_item_restaurant_list_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{information.category.toString()}"
            android:textSize="14sp"
            tools:text="레스토랑, 커피"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView_item_restaurant_list_id" />

        <TextView
            android:id="@+id/textView_item_restaurant_list_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{information.address}"
            android:textSize="14sp"
            tools:text="한밭대학교"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView_item_restaurant_list_category"/>

        <TextView
            android:id="@+id/textView_item_restaurant_list_introduction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{information.introduction}"
            android:textSize="12sp"
            tools:text="수요 미식회에 소개된 따끈한 맛집"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView_item_restaurant_list_address"/>

        <ImageView
            android:id="@+id/textView_item_restaurant_list_image"
            android:layout_width="72dp"
            android:layout_height="72dp"
            bind:imageUrl="@{information.image}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>