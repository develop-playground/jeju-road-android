<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="isMoreThanImageCountOne"
            type="Boolean" />

        <variable
            name="isExpand"
            type="Boolean" />

        <import type="android.view.View" />
    </data>

    <merge
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:parentTag="android.widget.FrameLayout">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/linearLayout_restaurant_content_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                tools:background="@color/onSurface">

                <TextView
                    android:id="@+id/textView_restaurant_content_title"
                    style="@style/JejuLoadTextStyle.Title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_12"
                    tools:text="우진 해장국" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_8">

                    <androidx.viewpager2.widget.ViewPager2
                        android:id="@+id/viewPager2_restaurant_content"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_220"
                        tools:listitem="@layout/item_restaurant_content_image" />

                    <TextView
                        android:id="@+id/textView_restaurant_content_image_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginTop="@dimen/dp_8"
                        android:layout_marginEnd="@dimen/dp_24"
                        android:alpha="0.9"
                        android:background="@color/disable"
                        android:fontFamily="@font/nanum_gotic_font"
                        android:padding="@dimen/dp_4"
                        android:textColor="@color/onSurface"
                        android:textSize="12sp"
                        android:visibility="@{isMoreThanImageCountOne ? View.VISIBLE : View.GONE}"
                        tools:text="1/100" />
                </FrameLayout>

                <TextView
                    android:id="@+id/textView_restaurant_content_introduction"
                    style="@style/JejuLoadTextStyle.Content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_12"
                    tools:text="'수요미식회'에 방영된, 따끈한 국물 요리로 해장하기 좋은 음식점" />

                <TextView
                    android:id="@+id/textView_restaurant_content_menu"
                    style="@style/JejuLoadTextStyle.SubTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_32"
                    android:text="@string/text_restaurant_content_menu"
                    android:textStyle="bold" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView_restaurant_content_menu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_8"
                    android:layout_marginBottom="@dimen/dp_16"
                    android:orientation="horizontal"
                    android:paddingHorizontal="@dimen/dp_16"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/item_restaurant_content_menu" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_16"
                    android:background="@color/lightGray" />

                <TextView
                    android:id="@+id/textView_restaurant_content_information_title"
                    style="@style/JejuLoadTextStyle.Title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_32"
                    android:text="@string/text_restaurant_information_title" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_16"
                    android:layout_marginHorizontal="@dimen/dp_16"
                    android:orientation="horizontal"
                    android:backgroundTint="@color/lightGray"
                    android:background="@drawable/bg_radius_10"
                    android:padding="@dimen/dp_16">

                    <TextView
                        android:id="@+id/textView_restaurant_content_information_address_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_restaurant_content_information_address"
                        style="@style/JejuLoadTextStyle.SubTitle"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        />

                    <TextView
                        android:id="@+id/textView_restaurant_content_information_address"
                        style="@style/JejuLoadTextStyle.Content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_8"
                        android:textColor="@color/gray"
                        tools:text="제주특별자치도 제주시 서사로 11"
                        app:layout_constraintStart_toEndOf="@id/textView_restaurant_content_information_address_title"
                        app:layout_constraintTop_toTopOf="@id/textView_restaurant_content_information_address_title"
                        />

                    <TextView
                        android:id="@+id/textView_restaurant_content_information_phone_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_restaurant_content_information_phone"
                        style="@style/JejuLoadTextStyle.SubTitle"
                        android:layout_marginTop="@dimen/dp_12"
                        app:layout_constraintTop_toBottomOf="@id/textView_restaurant_content_information_address_title"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        />

                    <TextView
                        android:id="@+id/textView_restaurant_content_information_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/JejuLoadTextStyle.Content"
                        android:layout_marginStart="@dimen/dp_8"
                        android:textColor="@color/gray"
                        android:text="+8210-0000-0000"
                        app:layout_constraintStart_toEndOf="@id/textView_restaurant_content_information_phone_title"
                        app:layout_constraintTop_toTopOf="@id/textView_restaurant_content_information_phone_title"
                        app:layout_constraintBottom_toBottomOf="@id/textView_restaurant_content_information_phone_title"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/JejuLoadTextStyle.Focus"
                    android:layout_marginHorizontal="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_8"
                    android:textAlignment="center"
                    android:text="@string/text_restaurant_content_find_load"
                    android:textColor="@color/onPrimary"
                    android:backgroundTint="@color/orangeSubColor"
                    android:background="@drawable/bg_radius_10"
                    />

                <TextView
                    style="@style/JejuLoadTextStyle.SubTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_32"
                    android:text="@string/text_restaurant_content_information_how_to_go"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView_restaurant_content_information_how_to_go"
                    style="@style/JejuLoadTextStyle.Content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dp_24"
                    android:layout_marginTop="@dimen/dp_16"
                    android:layout_marginBottom="@dimen/dp_16"
                    tools:text="동문 재래 시장에서 도보 9분" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0.3"
                    android:layout_marginHorizontal="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_16"
                    android:background="@android:color/darker_gray" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayout_restaurant_content_information_serving_time_area"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dp_16"
                    android:layout_marginBottom="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_32">

                    <ToggleButton
                        android:id="@+id/toggleButton_restaurant_content_information_flip"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_20"
                        android:background="@drawable/bg_open_time_toggle_button"
                        android:textOff="@null"
                        android:textOn="@null"
                        android:checked="true"
                        app:layout_constraintBottom_toBottomOf="@id/textView_restaurant_content_information_serving_time_title"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/textView_restaurant_content_information_serving_time_title"
                        app:layout_constraintTop_toTopOf="@id/textView_restaurant_content_information_serving_time_title" />

                    <TextView
                        android:id="@+id/textView_restaurant_content_information_serving_time_title"
                        style="@style/JejuLoadTextStyle.SubTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/text_restaurant_information_serving_time"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toStartOf="@id/toggleButton_restaurant_content_information_flip"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/textView_restaurant_content_information_serving_time"
                        style="@style/JejuLoadTextStyle.Focus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/dp_8"
                        android:layout_marginTop="@dimen/dp_16"
                        android:visibility="@{isExpand ? View.GONE : View.VISIBLE}"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/textView_restaurant_content_information_serving_time_title"
                        tools:text="오늘 (11.21) 13:00 - 22:30" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerView_restaurant_content_information_serving_time"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:visibility="@{isExpand ? View.VISIBLE : View.GONE}"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/textView_restaurant_content_information_serving_time_title"
                        tools:visibility="gone" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0.3"
                    android:layout_marginHorizontal="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_16"
                    android:background="@android:color/darker_gray" />

                <TextView
                    style="@style/JejuLoadTextStyle.SubTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_32"
                    android:text="@string/text_restaurant_content_information_tipe"
                    android:textStyle="bold" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView_restaurant_content_information_tip"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="@dimen/dp_16"
                    android:textSize="18sp"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/item_restaurant_content_tip"
                    />
            </LinearLayout>
        </ScrollView>
    </merge>
</layout>