<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="tip"
            type="String" />
    </data>

    <TextView
        android:id="@+id/textView_item_restaurant_content_tips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/JejuLoadTextStyle.Content"
        android:layout_marginHorizontal="@dimen/restaurant_default_information_tip_margin_horizontal"
        android:layout_marginTop="@dimen/restaurant_default_information_tip_margin_top"
        android:text="@{tip}"
        />
</layout>