<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_error_dialog_radius_shape">

        <ImageView
            android:id="@+id/imageView_ic_error"
            android:layout_width="@dimen/ic_error_width"
            android:layout_height="@dimen/ic_error_height"
            android:src="@drawable/ic_error"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView_message_error_dialog"
            style="@style/Text.ERROR_MESSAGE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/error_dialog_message_text_margin_top"
            android:gravity="center"
            app:layout_constraintBottom_toTopOf="@id/button_retry_error_dialog"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageView_ic_error"
            tools:text="@string/text_error_500_message" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_retry_error_dialog"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            style="@style/Text.ERROR_MESSAGE"
            android:background="@drawable/bg_error_dialog_retry_shape"
            android:text="@string/text_error_button_retry"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView_message_error_dialog" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>