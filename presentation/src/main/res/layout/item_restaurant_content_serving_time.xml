<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <data>
        <variable
            name="openTime"
            type="github.dev_playground.jeju_road.domain.model.OpenTime" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_item_restaurant_content_day"
            android:layout_width="@dimen/dp_32"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_12"
            android:text="@{openTime.convertDayOfWeek(openTime.day)}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="ìˆ˜"
            />

        <TextView
            android:id="@+id/textView_item_restaurant_content_start_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_12"
            android:text="@{openTime.operationStart.substring(0,5)}"
            app:layout_constraintStart_toEndOf="@id/textView_item_restaurant_content_day"
            app:layout_constraintTop_toTopOf="@id/textView_item_restaurant_content_day"
            tools:text="09:00"
            />

        <TextView
            android:id="@+id/textView_item_restaurant_content_middle_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:layout_marginHorizontal="@dimen/dp_12"
            app:layout_constraintStart_toEndOf="@id/textView_item_restaurant_content_start_time"
            app:layout_constraintTop_toTopOf="@id/textView_item_restaurant_content_start_time"
            />

        <TextView
            android:id="@+id/textView_item_restaurant_content_end_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_12"
            android:text="@{openTime.operationEnd.substring(0,5)}"
            app:layout_constraintStart_toEndOf="@id/textView_item_restaurant_content_middle_line"
            app:layout_constraintTop_toTopOf="@id/textView_item_restaurant_content_start_time"
            tools:text="20:00"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>