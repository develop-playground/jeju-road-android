<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="JejuLoadTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/onSurface</item>
        <item name="android:fontFamily">@font/nanum_gotic_font</item>
    </style>

    <style name="JejuLoadTextStyle.Title">
        <item name="android:fontFamily">@font/nanum_gothic_bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="JejuLoadTextStyle.SubTitle">
        <item name="android:fontFamily">@font/nanum_gothic</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="JejuLoadTextStyle.Content">
        <item name="android:fontFamily">@font/nanum_gothic</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="JejuLoadTextStyle.Focus">
        <item name="android:fontFamily">@font/nanum_gothic_bold</item>
        <item name="android:textColor">@color/orangeSubColor</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="JejuLoadTextStyle.Toolbar">
        <item name="android:fontFamily">@font/nanum_gothic_extrabold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.HEAD_RESTAURANT_PATE" parent="android:TextAppearance">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/onSurface</item>
        <item name="android:fontFamily">@font/nanum_gotic_bold_font</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <!-- error -->
    <style name="Text.ERROR_MESSAGE" parent="android:TextAppearance">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/nanum_gothic_bold</item>
    </style>

    <style name="Dialog.ERROR_DIALOG" parent="android:Theme.Dialog">
        <item name="android:windowBackground">
            @drawable/bg_error_dialog_radius_shape
        </item>

        <item name="android:windowMinWidthMajor">80%</item>
        <item name="android:windowMinWidthMinor">80%</item>
    </style>
</resources>